@using Microsoft.AspNetCore.Http
@using System.Security.Claims

@{
    var isAuthenticated = Context.User.Identity?.IsAuthenticated ?? false;
    var userName = isAuthenticated ? Context.User.FindFirst(ClaimTypes.Name)?.Value : null;
}

<ul class="navbar-nav">
@if (isAuthenticated)
{
    <li class="nav-item">
        <span class="nav-link text-light">Hello, @userName!</span>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link text-light"><i class="bi bi-box-arrow-right"></i> Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
    </li>
}
</ul>
